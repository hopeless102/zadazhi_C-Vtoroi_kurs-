using System;

public class Program
{
    public static void Main(string[] args)
    {
        // Задание 1: Fizz Buzz
        Console.WriteLine("Задание 1: Fizz Buzz"); // Выводит заголовок задания в консоль.
        Console.Write("Введите число от 1 до 100: "); // Предлагает пользователю ввести число.

        // Пытается преобразовать введенную строку в целое число и сохраняет результат в number1.
        // int.TryParse возвращает true, если преобразование удалось, и false в противном случае.
        if (int.TryParse(Console.ReadLine(), out int number1))
        {
            // Проверяет, находится ли введенное число в диапазоне от 1 до 100 (включительно).
            if (number1 >= 1 && number1 <= 100)
            {
                // Проверяет, делится ли число на 3 и на 5 без остатка.
                if (number1 % 3 == 0 && number1 % 5 == 0)
                {
                    Console.WriteLine("Fizz Buzz"); // Выводит "Fizz Buzz", если число делится на 3 и 5.
                }
                // Проверяет, делится ли число только на 3 без остатка.
                else if (number1 % 3 == 0)
                {
                    Console.WriteLine("Fizz"); // Выводит "Fizz", если число делится на 3.
                }
                // Проверяет, делится ли число только на 5 без остатка.
                else if (number1 % 5 == 0)
                {
                    Console.WriteLine("Buzz"); // Выводит "Buzz", если число делится на 5.
                }
                // Если число не делится ни на 3, ни на 5.
                else
                {
                    Console.WriteLine(number1); // Выводит введенное число.
                }
            }
            // Если число не находится в диапазоне от 1 до 100.
            else
            {
                Console.WriteLine("Ошибка: Число не в диапазоне от 1 до 100."); // Выводит сообщение об ошибке.
            }
        }
        // Если введенная строка не может быть преобразована в целое число.
        else
        {
            Console.WriteLine("Ошибка: Введено некорректное число."); // Выводит сообщение об ошибке.
        }

        // Задание 2: Вычисление процента
        Console.WriteLine("\nЗадание 2: Вычисление процента"); // Выводит заголовок задания в консоль.
        Console.Write("Введите значение: "); // Предлагает пользователю ввести значение.

        // Пытается преобразовать введенную строку в число с плавающей точкой и сохраняет результат в value.
        if (double.TryParse(Console.ReadLine(), out double value))
        {
            Console.Write("Введите процент: "); // Предлагает пользователю ввести процент.

            // Пытается преобразовать введенную строку в число с плавающей точкой и сохраняет результат в percentage.
            if (double.TryParse(Console.ReadLine(), out double percentage))
            {
                // Вычисляет процент от введенного значения.
                double result = value * (percentage / 100);
                Console.WriteLine($"Результат: {result}"); // Выводит результат вычисления процента.
            }
            // Если введенная строка не может быть преобразована в число с плавающей точкой.
            else
            {
                Console.WriteLine("Ошибка: Некорректный процент."); // Выводит сообщение об ошибке.
            }
        }
        // Если введенная строка не может быть преобразована в число с плавающей точкой.
        else
        {
            Console.WriteLine("Ошибка: Некорректное значение."); // Выводит сообщение об ошибке.
        }

        // Задание 3: Формирование числа из цифр
        Console.WriteLine("\nЗадание 3: Формирование числа из цифр"); // Выводит заголовок задания в консоль.
        Console.Write("Введите четыре цифры через пробел: "); // Предлагает пользователю ввести четыре цифры через пробел.

        // Считывает строку, введенную пользователем.
        string input = Console.ReadLine();
        // Разбивает строку на массив подстрок, используя пробел в качестве разделителя.
        string[] digits = input.Split(' ');

        // Проверяет, что в массиве ровно 4 элемента, и что каждый элемент можно преобразовать в целое число.
        if (digits.Length == 4 &&
            int.TryParse(digits[0], out int d1) &&
            int.TryParse(digits[1], out int d2) &&
            int.TryParse(digits[2], out int d3) &&
            int.TryParse(digits[3], out int d4))
        {
            // Формирует четырехзначное число, умножая каждую цифру на соответствующую степень десятки.
            int combinedNumber = d1 * 1000 + d2 * 100 + d3 * 10 + d4;
            Console.WriteLine($"Сформированное число: {combinedNumber}"); // Выводит сформированное число.
        }
        // Если введенные данные некорректны.
        else
        {
          Console.WriteLine("Ошибка: Введены некорректные данные."); // Выводит сообщение об ошибке.
        }

    }
}
using System;

public class Program
{
    public static void Main(string[] args)
    {
        // ... (Код первых трех заданий - опущен для краткости) ...

        // Задание 4: Обмен цифр в шестизначном числе
        Console.WriteLine("\nЗадание 4: Обмен цифр в шестизначном числе"); // Выводит заголовок задания в консоль.
        Console.Write("Введите шестизначное число: "); // Предлагает пользователю ввести шестизначное число.
        string sixDigitNumber = Console.ReadLine(); // Считывает строку, введенную пользователем.

        // Проверяет, что длина введенной строки равна 6, и что она может быть преобразована в целое число.
        if (sixDigitNumber.Length == 6 && int.TryParse(sixDigitNumber, out int num))
        {
            Console.Write("Введите номера разрядов для обмена (от 1 до 6) через пробел: "); // Предлагает пользователю ввести номера разрядов для обмена.
            string[] positions = Console.ReadLine().Split(' '); // Считывает строку, введенную пользователем, и разбивает ее на массив подстрок, используя пробел в качестве разделителя.

            // Проверяет, что в массиве ровно 2 элемента, и что каждый элемент может быть преобразован в целое число, и что каждое число находится в диапазоне от 1 до 6.
            if (positions.Length == 2 &&
                int.TryParse(positions[0], out int pos1) &&
                int.TryParse(positions[1], out int pos2) &&
                pos1 >= 1 && pos1 <= 6 && pos2 >= 1 && pos2 <= 6)
            {
                // Преобразует строку шестизначного числа в массив символов.
                char[] digitsArray = sixDigitNumber.ToCharArray();
                // Сохраняет значение символа в первой указанной позиции во временной переменной.
                char temp = digitsArray[pos1 - 1];
                // Присваивает элементу массива в первой указанной позиции значение элемента массива во второй указанной позиции.
                digitsArray[pos1 - 1] = digitsArray[pos2 - 1];
                // Присваивает элементу массива во второй указанной позиции значение, сохраненное во временной переменной (значение из первой позиции).
                digitsArray[pos2 - 1] = temp;

                // Создает новую строку из измененного массива символов.
                string swappedNumber = new string(digitsArray);
                Console.WriteLine($"Результат: {swappedNumber}"); // Выводит результат обмена цифр.
            }
            // Если введены некорректные номера разрядов.
            else
            {
                Console.WriteLine("Ошибка: Некорректные номера разрядов."); // Выводит сообщение об ошибке.
            }
        }
        // Если введено не шестизначное число.
        else
        {
            Console.WriteLine("Ошибка: Введено не шестизначное число."); // Выводит сообщение об ошибке.
        }

        // Задание 5: Четные числа в диапазоне
        Console.WriteLine("\nЗадание 5: Четные числа в диапазоне"); // Выводит заголовок задания в консоль.
        Console.Write("Введите два числа через пробел: "); // Предлагает пользователю ввести два числа через пробел.
        string[] range = Console.ReadLine().Split(' '); // Считывает строку, введенную пользователем, и разбивает ее на массив подстрок, используя пробел в качестве разделителя.

        // Проверяет, что в массиве ровно 2 элемента, и что каждый элемент может быть преобразован в целое число.
        if (range.Length == 2 &&
            int.TryParse(range[0], out int start) &&
            int.TryParse(range[1], out int end))
        {
            // Если первое число больше второго, меняет их местами.
            if (start > end)
            {
                int temp = start;
                start = end;
                end = temp;
            }

            Console.Write("Четные числа в диапазоне: "); // Выводит сообщение о четных числах в диапазоне.
            // Перебирает числа в диапазоне от start до end (включительно).
            for (int i = start; i <= end; i++)
            {
                // Проверяет, является ли число четным.
                if (i % 2 == 0)
                {
                    Console.Write(i + " "); // Выводит четное число и пробел.
                }
            }
            Console.WriteLine(); // Переводит курсор на новую строку.
        }
        // Если введены некорректные числа.
        else
        {
            Console.WriteLine("Ошибка: Некорректный ввод чисел."); // Выводит сообщение об ошибке.
        }
    }
}
